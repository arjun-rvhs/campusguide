<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title>RV Campus Guide</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="/css/tour3d.css">
</head>

<body>

    <%- include('partials/nav') %>

    <div class="main-banner">
        <div class="bg-img-container">
            <img src="/images/3dtour-bg.jpg" alt="">
        </div>
        <div class="banner-text load-fadein">
            <h1 class="hoverify">3D Tour</h1>
            <!-- <i class="fa-solid fa-school facilities-school-icon-shadow"></i> -->
            <h4 class="hoverify">Step inside without stepping out.</h4>
            <hr>
        </div>
    </div>

    <div class="instructions">
        <h3 class="title">Here's how to use our 3D tour guide:</h3>

        <div class="click-play">
            <h4 class="title">Click "Play"</h4>
            <div class="play-button"><i class="fa-solid fa-play"></i></div>
            <div class="cursor"><i class="fa-solid fa-hand-pointer"></i></div>
            <hr>

        </div>

        <div class="drag-view">
            <h4 class="title">Drag to look around</h4>
            <div class="cursor"><i class="fa-solid fa-hand-pointer"></i></div>
            <hr>
        </div>

        <div class="click-move">
            <h4 class="title">Click around to move</h4>
            <div class="cursor"><i class="fa-solid fa-hand-pointer"></i></div>
            <hr>
        </div>
    </div>

    <table class="iframe-set">
        <tr>
            <td>
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item"><button class="page-link up-arrow l4">L4</button></li>
                        <li class="page-item"><button class="page-link l3">L3</button></li>
                        <li class="page-item"><button class="page-link l2">L2</button></li>
                        <li class="page-item"><button class="page-link down-arrow l1">L1</button></li>
                    </ul>
                </nav>
            </td>
            <td>
                <iframe id="showcase-player" width="853" height="480" src="https://my.matterport.com/show/?m=tNXPdkPxawe" frameborder="0" allowfullscreen allow='xr-spatial-tracking'></iframe>
            </td>
        </tr>
    </table>

    <div class="bottomspace">

    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/4b57d90043.js" crossorigin="anonymous"></script>
    <script src="/js/fadein.js" charset="utf-8"></script>
    <script src="/js/pageinationsizer.js" charset="utf-8"></script>
    <script src="js/home.js"></script>

    <script type="text/javascript">
        document.querySelectorAll('.page-link').forEach(button => {
            button.addEventListener('click', () => {
                // Remove 'page-selected' class from all buttons
                document.querySelectorAll('.page-link').forEach(btn => btn.classList.remove('page-selected'));

                // Add 'page-selected' class to the clicked button
                button.classList.add('page-selected');
            });
        });

        // Constants for iframe sources
        const src1 = 'https://my.matterport.com/show/?m=tNXPdkPxawe'; // Replace with actual URL
        const src2 = 'https://my.matterport.com/show/?m=tNXPdkPxawe'; // Replace with actual URL
        const src3 = 'https://my.matterport.com/show/?m=tNXPdkPxawe'; // Replace with actual URL
        const src4 = 'https://my.matterport.com/show/?m=tNXPdkPxawe'; // Replace with actual URL

        // Function to update iframe source
        function updateIframeSource(src) {
            document.getElementById('showcase-player').src = src;
        }

        // Event listeners for buttons
        document.querySelector('.l1').addEventListener('click', () => updateIframeSource(src1));
        document.querySelector('.l2').addEventListener('click', () => updateIframeSource(src2));
        document.querySelector('.l3').addEventListener('click', () => updateIframeSource(src3));
        document.querySelector('.l4').addEventListener('click', () => updateIframeSource(src4));
    </script>
</body>

</html>
